{
    "version": 2,
    "builds": [
      {
        "src": "app/**/*.tsx",
        "use": "@vercel/node"
      },
      {
        "src": "api/**/*.ts",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/app/$1"
      }
    ],
    {
      "functions": {
        "api/db/route.js": {
          "maxDuration": 60
        }
      }
    }
  }
  